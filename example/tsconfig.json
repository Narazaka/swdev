{
  "exclude": ["www/script"],
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["DOM", "ES2019", "WebWorker", "deno.window"],
    "module": "esnext",
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true
  }
}
